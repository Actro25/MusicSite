@{
    Layout = "_LayoutMusicHome";
}
@section Styles{
    <link rel="stylesheet" href="~/css/bottomPanelStyle.css" asp-append-version="true"/>
}
<div class="music-player">
    <div class="music-info">
        <img alt="Cover" id="image-track-bottom-panel" class="song-cover">
        <div>
            <h4 id="name-track-bottom-panel" class="song-title">Blinding Lights</h4>
            <p id="artist-bottom-panel" class="song-artist">The Weeknd</p>
        </div>
    </div>

    <div class="music-center">
        <div class="music-controls">
            <button class="prev-btn"><img class="image-control-media" src="/img/mediaControlImages/icons8-rewind-50.png"></button>
            <button class="play-btn" id="play-track-button"><img class="image-control-media" src="/img/mediaControlImages/icons8-play-50.png"></button>
            <button class="next-btn"><img class="image-control-media" src="/img/mediaControlImages/icons8-fast-forward-50.png"></button>
        </div>

        <div class="music-progress">
            <span class="time current">0:42</span>
            <input id="play-track-input" type="range" min="0" max="100" value="20" class="progress-bar">
            <span id="end-lenght-track" class="time total">3:50</span>
            <audio id="track-player"></audio>
        </div>
    </div>

    <div class="music-volume">
        <img class="image-control-media" src="/img/mediaControlImages/icons8-audio-50.png">
        <input id="volume-track-input" type="range" min="0" max="100" value="70" class="volume-bar">
    </div>
</div>
@section Scripts
{
    <script src="~/js/BottomSideScript.js"></script>
}
