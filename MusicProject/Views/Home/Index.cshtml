@{
    ViewData["Title"] = "Home Page";
}
@section Styles{
    <link rel="stylesheet" href="css/homeStyle.css"/>
}
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.13.0/lottie.min.js"></script>
    <script src="~/js/HomeScript.js" asp-append-version="true"></script>
}
<div class="home-container">
    <section id="home" class="one">
        <div class="video-section">
            <video autoplay muted loop playsinline id="home-first-page">
                <source src="video/you%20look%20LONELY!%20_%20bocchi%20the%20rock!%20×%20blade%20runner%202049%20×%20STAN.mp4" type="video/mp4">
            </video>
            <button id="sound-button" class="bn30">
                <div id="home-animation-first-page-music" class="music-div"></div>
            </button>
            <div class="inner-circle-div">
                <div class="music-info">
                    <h2>Listen with us</h2>
                    <p>Immerse yourself in the rhythm and atmosphere.</p>
                    <form asp-controller="HomeMusic" asp-action="Index">
                        <button class="music-button">
                            🎧 Listen to music
                        </button>
                    </form>
                </div>
            </div>
            <div id="home-animation-first-page" class="home-animation-circle"></div>
        </div>
    </section>
    <section id="news" class="news glassy-section">
        <div class="news-container">
            <div class="title-div-timeline">
                <h2 class="section-title ">LATEST NEWS</h2>
            </div>
            <div class="news-wrapper">
                <div class="timeline-content news-content-addition glass div1">
                    <h3>🚀 Launch of BochiMusic</h3>
                    <p>Our site is officially live! Start your journey into rhythm and atmosphere today.</p>
                    <button class="music-button small">Explore</button>
                </div>
                <div class="timeline-content news-content-addition glass div2">
                    <h3>🎧 Sound Upgrade</h3>
                    <p>New immersive audio experience — hear the future in every beat.</p>
                    <button class="music-button small">Listen</button>
                </div>
                <div class="timeline-content news-content-addition glass div3">
                    <h3>🌐 Interface Redesign</h3>
                    <p>We’ve revamped our visuals with new effects, layouts, and smoother animations.</p>
                    <button class="music-button small">View Update</button>
                </div>
                <div class="timeline-content news-content-addition glass div4">
                    <h3>🤝 Team Expansion</h3>
                    <p>Meet new developers who joined to bring more creative power to BochiMusic.</p>
                    <button class="music-button small">Meet Team</button>
                </div>
                <div class="timeline-content news-content-addition glass div5">
                    <h3>💡 Future Features</h3>
                    <p>Stay tuned for upcoming playlists, user profiles, and friend syncing!</p>
                    <button class="music-button small">Read More</button>
                </div>
            </div>
        </div>
    </section>
    <section class="timeline" id="timeline">
        <div class="title-div-timeline">
            <h2 class="section-title">ABOUT US</h2>    
        </div>
        <div class="timeline-container">
            <div class="timeline-line"></div>

            <div class="timeline-item">
                <div class="timeline-content glass">
                    <h4>About Site</h4>
                    <p>BochiMusic is a new website that allows you to listen to music without ads and create playlists according to your taste and preferences. You can also listen to your friends' music in real time or see when your friends are listening to music.</p>
                </div>
                <div class="timeline-dot"></div>
            </div>

            <div class="timeline-item">
                <div class="timeline-content glass">
                    <h4>Our Integration</h4>
                    <p>We’ve officially launched our platform — connecting design, sound, and technology into one immersive experience. The beginning of something bigger.</p>
                </div>
                <div class="timeline-dot"></div>
            </div>

            <div class="timeline-item">
                <div class="timeline-content glass">
                    <h4>About Developers</h4>
                    <p>Created by a small passionate team that loves visuals, music, and creative web design. Every pixel here was made with dedication.</p>
                </div>
                <div class="timeline-dot"></div>
            </div>

            <div class="timeline-item">
                <div class="timeline-content glass">
                    <h4>Features Site</h4>
                    <p>Smooth animations, video backgrounds, and dynamic sound — all built for a unique atmosphere that feels alive.</p>
                </div>
                <div class="timeline-dot"></div>
            </div>
        </div>
    </section>
    <section class="contact" id="contact">
        <div class="contact-container">
            <div class="contact-info glass">
                <h3>CONTACT TO US</h3>
                <p>Ready to interface with the future? Our neural network specialists are standing by to guide you through the quantum realm of possibilities.</p>
                <p>Connect through the dimensional gateway and let us initialize your journey into the digital consciousness matrix.</p>
                
                <div class="social-links">
                    <a href="#" class="glass">📡</a>
                    <a href="#" class="glass">🌐</a>
                    <a href="#" class="glass">💬</a>
                    <a href="#" class="glass">📨</a>
                </div>
            </div>
            
            <div class="contact-form glass">
                <div class="form-group">
                    <input type="text" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <input type="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Subject" required>
                </div>
                <div class="form-group">
                    <textarea rows="5" placeholder="Message" required></textarea>
                </div>
                <button type="submit" class="submit-btn">SEND</button>
            </div>
        </div>
    </section>
</div>
